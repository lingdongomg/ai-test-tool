# AI Test Tool 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== LLM 配置 ====================
# LLM提供商: ollama, openai, anthropic, azure
LLM_PROVIDER=ollama

# 模型名称
LLM_MODEL=qwen3:8b

# API密钥 (OpenAI/Anthropic/Azure 需要)
LLM_API_KEY=

# API基础URL (可选，用于自定义端点)
LLM_API_BASE=

# 生成温度 (0.0-2.0)
LLM_TEMPERATURE=0.3

# 最大token数
LLM_MAX_TOKENS=4096

# ==================== MySQL 数据库配置 ====================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=ai_test_tool

# ==================== 服务配置 ====================
# API服务监听地址
SERVER_HOST=0.0.0.0

# API服务端口
SERVER_PORT=8000

# ==================== 测试配置 ====================
# 默认测试目标URL
TEST_BASE_URL=http://localhost:8080

# 请求超时时间(秒)
TEST_TIMEOUT=30

# 失败重试次数
TEST_RETRY_COUNT=3

# 并发请求数
TEST_CONCURRENT_REQUESTS=5

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志目录
LOG_DIR=./logs
